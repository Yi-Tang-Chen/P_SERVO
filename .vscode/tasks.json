{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build P-SERVO Project (Ubuntu)",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                // 所有需要編譯的 .cpp 檔案
                "camera.cpp",
                "RS485Comm.cpp",
                "clawcontroller.cpp",
                "-o",
                "final_project", // 在 Linux 上，執行檔通常沒有 .exe 副檔名
                "-lncurses"      // !!! 重要：連結 ncurses 函式庫
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: /usr/bin/g++"
        }
    ]
}